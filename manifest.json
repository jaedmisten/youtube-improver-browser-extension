{
	"manifest_version": 3,
	"name": "Youtube Improver",
	"version": "1.0",
	"description": "A Google Chrome extension to improve the Youtube experience.",
	"action": {
		"default_popup": "popup.html",
		"default_icon": "favicon.png"
	},
	"permissions": [],
	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["content.js"]
		}
	]
}
